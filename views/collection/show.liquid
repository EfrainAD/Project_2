{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>{{collection.name}}</h2>
            <h3>
                {% if collection.public %}
                    This collection is public.
                {% else %}
                    This collection is private.
                {% endif %}
            </h3>
            {% for problem in collection.puzzle %}
               <h4><a href="">Problem: {{problem}}</a></h4>
            {% endfor %}
            {% if collection.puzzle.length == 0 %}
               <p>This collection has no problems in it.</p>
            {% endif %}
            
            <div class="btn-group">
                <a href="/collection/{{collection._id}}/edit" class="btn btn-primary">Edit Collection</a>
                <form action="/collection/delete/{{collection._id}}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        </article>
