{% layout 'layout.liquid', loggedIn: loggedIn %}
{% block content %}
  {%- comment -%} <h2>{{loggedIn}} {%- endcomment -%}
  </h2>
  <div class="collections-header">
    <h1>Collections!</h1>
    <!-- Add a new collection -->
    <a href="/collection/new" class="btn add">
      Add New Collection
    </a>
  </div>

  <!-- Display what collections you have with a link to them. -->
  {% if collection.length == 0 %}
    <p>There are no collections yet. Please add some.</p>
  {% else %}
    {% for collection in collection %}
      <div class="row">
        <a class="collection-link" href="/collection/{{collection.id}}">{{collection.name}}
        </a>
        <div class="author">by
          {{collection.owner.username}}
        </div>
      </div>
    {% endfor %}
  {% endif %}

{% endblock %}}}}}}}}}}}}