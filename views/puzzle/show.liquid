{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>Owner: {{puzzle.owner.username}}</h2>
            <h2>Question: {{puzzle.problem}}</h2>
            <h3>
                {% if puzzle.public %}
                    This puzzle is public.
                {% else %}
                    This puzzle is private.
                {% endif %}
            </h3>
            {% for collection in puzzle.collections %}
               <h4>Collection: <a href="/collection/{{collection}}">{{collection.name}}</a></h4>
            {% endfor %}
            <h1>How many collections {{puzzle.collection.length}}</h1>
            {% if puzzle.collection.length == 0 %}
               <p>
                    This collection has no collections in it. THIS SHOULD NOT BE RIGHT. 
                </p>
            {% else %}
                <a href="">{{puzzle}}</a>
            {% endif %}
                
            <div class="btn-group">
                <a href="/" class="btn btn-primary">Edit </a>
                <form action="/collection/delete/?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        </article>
